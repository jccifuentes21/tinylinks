<!DOCTYPE html>
<html lang="en">
  <%- include('./partials/head.ejs') %>

  <body>
    <%- include('./partials/header.ejs') %>

    <main style="margin: 1em">
      <div class="offset-5 col mt-5">
        <form method="post" action="/auth/register">
          <div class="mb-2">
            <label class="form-label" for="name">Name</label>
            <input class="form-text" type="text" name="name" id="name" required />
          </div>
          <div class="mb-2">
            <label class="form-label" for="email">Email</label>
            <input class="form-text" type="email" name="email" id="email" required />
          </div>
          <div class="mb-2">
            <label class="form-label" for="password">Password</label>
            <input class="form-text" type="password" name="password" id="password" required />
          </div>
          <button class="btn btn-primary mt-2" type="submit">Register</button>
        </form>
      </div>
    </main>
    <%- include('./partials/scripts.ejs') %>
  </body>
</html>
